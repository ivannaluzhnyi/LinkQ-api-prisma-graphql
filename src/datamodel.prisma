type Account @db(name: "account") {
  id: Int! @id
  application: [Application] 
  birthdate: DateTime
  created: DateTime!
  email: String! @unique
  firstname: String
  guarantor: [Guarantor]
  isActive: Boolean! @db(name: "is_active")
  lastname: String
  password: String!
  property: [Property]
  roles: Json!
  salary: Float
  updated: DateTime!
  address: [Address] @relation(link: INLINE)
}

type Address @db(name: "address") {
  id: Int! @id
  city: String!
  country: String!
  floor: Int
  property: Property! @relation(link: INLINE)
  room: Int
  street: String!
  zipcode: String!
}

type Application @db(name: "application") {
  id: Int! @id
  buyer: Account! @db(name: "buyer_id")
  contract: Contract!
  created: DateTime!
  offer: Float!
  property: Property! @db(name: "property_id") @relation(link: INLINE)
  updated: DateTime!
}

type Contract @db(name: "contract") {
  id: Int! @id
  application: Application! @db(name: "application_id") @unique @relation(link: INLINE)
  created: DateTime!
  price: Float!
  updated: DateTime!
}

type DoctrineMigrationVersion @db(name: "doctrine_migration_versions") {
  version: ID! @id
  executedAt: DateTime @db(name: "executed_at")
  executionTime: Int @db(name: "execution_time")
}

type Feature @db(name: "feature") {
  id: Int! @id
  bathrooms: Int!
  bedrooms: Int!
  garages: Int!
  property: Property! @relation(link: INLINE)
  rooms: Int!
  size: Int!
}

type Greeting @db(name: "greeting") {
  id: Int! @id
  name: String!
}

type Guarantor @db(name: "guarantor") {
  id: Int! @id
  firstName: String! @db(name: "first_name")
  lastName: String! @db(name: "last_name")
  relation: String!
  salary: Float!
  userRelated: Account! @db(name: "user_related_id") @relation(link: INLINE)
}

type Media @db(name: "media") {
  id: Int! @id
  created: DateTime!
  extension: String!
  filename: String!
  property: Property @db(name: "property_id")
  updated: DateTime!
  uri: String!
}

type Property @db(name: "property") {
  id: Int! @id
  address: Address! @db(name: "address_id") @unique
  application: [Application]
  description: String!
  features: Feature! @db(name: "features_id") @unique
  media: [Media]
  title: String!
  userRelated: Account @db(name: "user_related_id")
}
